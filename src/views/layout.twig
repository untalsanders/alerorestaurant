            </header>

            <section class="principal">
                {% block content %}

                {% endblock %}
            </section>

            {% block sidebar %}

            {% endblock %}

            <footer>
                <section class="links">
                    <a href="/">Inicio</a>
                    <a href="/about">Acerca de</a>
                    <a href="/products">Productos</a>
                    <a href="/blog">Blog</a>
                    <a href="/contact">Contacto</a>
                </section>
                <div class="social">
                    <a href="/">IN</a>
                    <a href="/">TW</a>
                    <a href="/">GH</a>
                </div>
            </footer>
        </div>
    </body>
    <script src="/static/js/index.js"></script>
