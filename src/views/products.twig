{% extends 'templates/base.twig' %}

{% block title %}
    Productos
{% endblock %}

{% block content %}
    <div class="container">
        <h2>Lista de Productos</h2>
        {% for shirt in shirts %}
            <article class="article">
                <h2 class="titulo">Camiseta {{ shirt.title }}</h2>
                <img src="/static/assets/img/{{ shirt.image }}" width="250" />
                <p>{{ shirt.description }}</p>
                <a href="/products/{{ shirt.id }}">Ver</a>
            </article>
        {% endfor %}
    </div>
{% endblock %}
