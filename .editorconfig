root = true

[*]
indent_style             = space
end_of_line              = lf
charset                  = utf-8
trim_trailing_whitespace = true
insert_final_newline     = false

[*.{css,js,jsx,ts,tsx,json,html}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.{yaml,yml}]
indent_size = 2
